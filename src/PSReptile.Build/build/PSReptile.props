<Project>
    <!-- The help file to generate -->
    <PropertyGroup>
        <BuildPSHelp Condition=" '$(BuildPSHelp)' == '' ">true</BuildPSHelp>
        <PublishPSHelp Condition=" '$(PublishPSHelp)' == '' ">true</PublishPSHelp>
        <PSModuleHelpFile Condition=" '$(PSModuleHelpFile)' == '' ">$(IntermediateOutputPath)$(TargetName)$(TargetExt)-Help.xml</PSModuleHelpFile>
    </PropertyGroup>

    <ItemGroup>
        <PSModuleHelp
            Include="$(PSModuleHelpFile)"
            SourceModule="$(PrimaryOutput)"
        />
    </ItemGroup>
</Project>
